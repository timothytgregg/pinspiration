<h1>Editing board</h1>

<%= form_for :board, url: board_path(@board), method: :patch do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', boards_path %>

<%= link_to 'Delete!', board_path(@board), method: :delete, class: 'delete' %>
